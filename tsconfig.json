{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "src/*": ["./src/*"],
      "assets/*": ["./assets/*"],
      "app.json": ["./app.json"],
      "package.json": ["./package.json"]
    },
  },
  "paths": {
    "api/*": "api/*",
    "assets/*": "assets/*",
    "components/*": "components/*",
    "constant/*": "constant/*",
    "contexts/*": "contexts/*",
    "hooks/*": "hooks/*",
    "icons/*": "icons/*",
    "layouts/*": "layouts/*",
    "store/*": "store/*",
    "utils/*": "utils/*",
    "lib/*": "lib/*",
    "config/*": "config/*",
    "i18n/*": "i18n/*"
  },
  "include": ["assets/", "src/", "index.js"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "postcss.config.js",
    "react-native.config.js"
  ]
}
